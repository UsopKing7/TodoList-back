generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id_username   String @id @default(uuid())
  username      String @unique
  email         String @unique
  password      String
  tasks         tasks []
}

model tasks {
  id_tarea      String @id @default(uuid())
  title         String
  description   String
  created_in    DateTime @default(now())
  state         State @default(PROGRESS)
  apdated_in    DateTime @updatedAt
  id_usuario    String

  usuario       usuarios @relation(fields: [id_usuario], references: [id_username])
}

enum State {
  EARRING
  PROGRESS
  COMPLETE
}